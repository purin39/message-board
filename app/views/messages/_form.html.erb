<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  <label>
    <span>名前:</span>
    <%= f.text_area :name %>
  </label>

  <label>
    <span>年齢:</span>
    <%= f.text_area :age %>
  </label>

  <label>
    <span>内容:</span>
    <%= f.text_area :body %>
  </label>

  <%= f.submit class: "btn btn-xs btn-primary" %>
<% end %>